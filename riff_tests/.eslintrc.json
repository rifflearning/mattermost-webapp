{
    "rules": {
        "no-console": 0,
        "global-require": 0,
        "func-names": 0,
        "prefer-arrow-callback": 0,
        "no-magic-numbers": 0,
        "no-unreachable": 0,
        "new-cap": 0,
        "max-nested-callbacks": 0,

        "brace-style": [
            "error",
            "stroustrup",
            {
                "allowSingleLine": false
            }
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "header/header": [
            "error",
            "line",
            " Copyright (c) 2018-present Riff Learning, Inc. All Rights Reserved.\n See LICENSE.txt for license information."
        ],
        "indent": [
            "error",
            4,
            {
                "CallExpression": { "arguments": "first" }
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [ "_id" ]
            }
        ],
        "react/jsx-max-props-per-line": [
            "error",
            {
                "when": "multiline",
                "maximum": 1
            }
        ]
    },
    "env": {
        "jest": true
    }
}
